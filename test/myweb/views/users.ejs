<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/javascripts/jquery.min.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
    <title>MY SHARE & FAIR</title>
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/header.css">
    <link rel="stylesheet" href="/stylesheets/users.css">
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
</head>
<body>
    <header>
        <% include header.ejs %>
    </header>
    <div class="view_box">
        <div class="profile_box">
            <div class="profile_wrapper">
                <form action="/users/users_editimg" class="profile_little_box profile_img_box" method="POST" enctype="multipart/form-data">
                    <label class="profile_img_wrapper" for="uploadfile">
                        <!-- <div class="profile_img_wrapper"> -->
                            <% if (userimg) { %>
                            <img class="profile_img" src="/images/uploaded/<%= userimg %>">
                            <!-- <img class="edit_img" src="/images/default_image.PNG"> -->
                            <% } else { %>
                            <img class="profile_img" src="/images/default_image.PNG">
                            <% } %>
                        <!-- </div> -->
                    </label>
                    <input type="file" name="uploadfile" id="uploadfile" class="uploadfile" value="" required/>
                    <button type="submit" class="edit_profile">프로필 수정 반영하기</button>
                </form>
                <div class="profile_little_box profile_text_box">
                    <span><%= login %> 님</span>
                </div>
            </div>
        </div>
        <div class="little_box my_sales">
            <a href="/users/users_sales">
                <div class="img_wrapper">
                    <img class="sales_img" src="/images/users_sales.png">
                </div>
                <h4>판매내역</h4>
            </a>
        </div>
        <div class="little_box my_deals">
            <a href="/users/users_deals">
                <div class="img_wrapper">
                    <img class="deals_img" src="/images/users_deals.png">
                </div>
                <h4>가격제안 내역</h4>
            </a>
        </div>
        <div class="little_box my_chatting">
            <a href="/users/users_chatting">
                <div class="img_wrapper">
                    <img class="chatting_img" src="/images/users_chatting.png">
                </div>
                <h4>채팅 내역</h4>
            </a>
        </div>
    </div>
</body>
</html>