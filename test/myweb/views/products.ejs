<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>글쓰기 : SHARE & FAIR</title>
    <link rel="stylesheet" href="/stylesheets/bootstrap.css">
    <link rel="stylesheet" href="/stylesheets/header.css">
    <link rel="stylesheet" href="/stylesheets/productsstyle.css">
</head>
<body>
    <header>
        <% include header.ejs %>
    </header>
    <div class="products_box">
        <% posts.forEach((item, index) => { %>
            <div class="product">
                <a href="/products/<%=item.id %>"></a><img src="/images/uploaded/<%= item.img %>"></a>
                <div class="product_text_wrapper">
                    <div class="product_text product_title">
                        <%= item.title %>
                    </div>
                    <div class="product_text product_price">
                        <p><b><%= item.price.toLocaleString() %> 원</b></p>
                    </div>
                    <div class="product_text product_created">
                        <p><%= item.created.toString().substring(0,15) %></p>
                    </div>
                </div>
                <hr>
            </div>
        <% }) %>
    </div>
</body>
</html>